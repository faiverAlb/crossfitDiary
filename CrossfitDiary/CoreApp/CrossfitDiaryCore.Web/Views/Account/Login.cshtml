@{
    Layout = null;
    string currentVersion = string.Format("{0}.{1}.{2}", typeof(Startup).Assembly.GetName().Version.Major, typeof(Startup).Assembly.GetName().Version.Minor, typeof(Startup).Assembly.GetName().Version.Build);
}
<!DOCTYPE html>
<html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-35949393-2"></script>
    <script>

        var host = window.location.hostname;
        if (host !== "localhost") {
            window.dataLayer = window.dataLayer || [];

            function gtag() { dataLayer.push(arguments); }

            gtag('js', new Date());

            gtag('config', 'UA-35949393-2');
        }
    </script>

    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/x-icon" href="favicon.ico"/>

    <title>Log in</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    @* <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script> *@
    @* <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script> *@
    @* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.jpls" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> *@

    <link rel="stylesheet" href="~/dist/generated/login.css" asp-append-version="true"/>

</head>
<body>


<main role="main">
    <div class="container">
        <div class="login-container mt-5">
            <div class="text-center py-2 person-icon">
                <i class="fas fa-rocket fa-5x"></i>
            </div>
            <h1 class="h3 mb-3 font-weight-normal text-center">CF Wod v@(currentVersion)</h1>

            <form asp-action="Confirmation" method="post">
                <hr/>
                <button type="submit" class="btn btn-lg btn-block social-button  vk" id="Vkontakte" value="Vkontakte" name="provider">
                    <i class="fab fa-vk"></i> Sign in with Vkontakte
                </button>
                <hr/>
                <button type="submit" class="btn btn-lg btn-block social-button google" id="Google" value="Google" name="provider">
                    <i class="fab fa-google-plus-g"></i> Sign in with Google
                </button>
            </form>

        </div>

    </div>
    <section class="jumbotron text-center mt-5">
        <div class="container">
            <h1>What is it?</h1>
            <p class="lead text-muted">It's a <span class="font-weight-bold">free</span> site where you can:</p>
        </div>
    </section>
    <section class="jumbotron text-center mt-5">
        <div class="container">
            <h1>1. Plan your workouts</h1>
            <p class="lead text-muted">It's a <span class="font-weight-bold">free</span> site where you can:</p>
        </div>
    </section>

</main>
</body>
</html>