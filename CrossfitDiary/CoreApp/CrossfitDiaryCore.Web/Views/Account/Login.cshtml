    <meta charset="utf-8"/>
    <meta name="yandex-verification" content="ac91279fa998369e"/>
    <meta name="description" content="Free Crossfit Workouts Journal">
    <meta name="keywords" content="Crossfit,Wod,Workout,Diary, Journal, Sport">
    <meta name="author" content="A.G.">
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/x-icon" href="favicon.ico"/>

    <title>Log in</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    @* <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script> *@
    @* <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script> *@
    @* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.jpls" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> *@

    <link rel="stylesheet" href="~/dist/generated/login.css" asp-append-version="true"/>

</head>


<body>
<header>
    <nav class="navbar navbar-expand navbar-light bg-light ">
        <div class=" container  justify-content-end" id="navbarText">
            <ul class="navbar-nav ">
                <li class="nav-item text-danger">
                    <a class="nav-link" target="_blank" href="https://t.me/workouter_crossfit">
                        <i class="fab fa-telegram fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="mailto: faiver.alb@gmail.com">
                        <i class="fas fa-envelope fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="https://www.linkedin.com/in/albert-gizetdinov-67b9a135">
                        <i class="fab fa-linkedin fa-lg"></i>
                    </a>
                </li>
            </ul>

        </div>
    </nav>
</header>


<main role="main">
    <div class="container">
        <div class="login-container mt-5">
            <div class="text-center py-2 person-icon">
                <i class="fas fa-rocket fa-5x"></i>
            </div>
            <h1 class="h3 mb-3 font-weight-normal text-center">CF Wod v@(currentVersion)</h1>

            <form asp-action="Confirmation" method="post">
                <hr/>
                <button type="submit" class="btn btn-lg btn-block social-button  vk" id="Vkontakte" value="Vkontakte" name="provider">
                    <i class="fab fa-vk"></i> Sign in with Vkontakte
                </button>
                <hr/>
                <button type="submit" class="btn btn-lg btn-block social-button google" id="Google" value="Google" name="provider">
                    <i class="fab fa-google-plus-g"></i> Sign in with Google
                </button>
            </form>


        </div>

    </div>

    <div class="container mt-5">
        <div class="row text-center">
            <div class="col-md-4 ">
                <h2>Create your wod</h2>
                <img src="~/images/plan-wod-2.png" asp-append-version="true" alt="Create your wod!" class="img-fluid  mx-auto"/>
            </div>
            <div class="col-md-4">
                <h2>Plan it</h2>
                <img src="~/images/main-page.png" asp-append-version="true" alt="Plan your wod!" class="img-fluid  mx-auto"/>
            </div>
            <div class="col-md-4">
                <h2>Track progress</h2>
                <img src="~/images/track-progress.png" asp-append-version="true" alt="Track your progress!" class="img-fluid  mx-auto"/>
            </div>
        </div>

        <hr>

    </div>

    <nav class="navbar fixed-bottom navbar-expand-sm navbar-dark bg-dark ">
        <a class="navbar-brand mx-auto" href="#">Don't worry, it's free ;)</a>
    </nav>


</main>
</body>
</html>