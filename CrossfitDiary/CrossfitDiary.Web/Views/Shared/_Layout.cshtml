@using CrossfitDiary.Web.MvcHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-inverse ">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Workouter v0.1</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            @if (@User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav">
                    <li class="@Html.IsSelected(MVC.Home.Name)">
                        <a href="@Url.Action(MVC.Home.ActionNames.Index, MVC.Home.Name)">Home</a>
                    </li>
                    <li class="@Html.IsSelected(MVC.Admin.Name)">
                        <a href="@Url.Action(MVC.Admin.ActionNames.Index, MVC.Admin.Name)">Admin</a>
                    </li>
                    <li class="@Html.IsSelected(MVC.Teacher.Name)">
                        <a href="@Url.Action(MVC.Teacher.ActionNames.Index, MVC.Teacher.Name)">Instructor</a>
                    </li>
                    <li class="@Html.IsSelected(MVC.Crossfitter.Name) dropdown" >
                        <a href="" class="dropdown-toggle"data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-universal-access" aria-hidden="true"></i>Crossfitter <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action(MVC.Crossfitter.ActionNames.Index, MVC.Crossfitter.Name)">Create workout</a></li>
                            <li><a href="#">Another action</a></li>
                        </ul>

                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    </li>
                    <li class="@Html.IsSelected(MVC.Home.ActionNames.Secure)">
                        <a href="@Url.Action(MVC.Home.ActionNames.Secure, MVC.Home.Name)">Secure</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action(MVC.Account.ActionNames.LogOut, MVC.Account.Name)"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#">@User.Identity.Name</a>
                    </li>
                </ul>
            }
            else
            {
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action(MVC.Account.ActionNames.Login, MVC.Account.Name)">Log In <i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
            </ul>
            }
        </div>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>



@Scripts.Render("~/bundles/site")
@RenderSection("scripts", required: false)
</body>
</html>