<div class="simple-routine-item">
    <div class="form-inline">
        <div class="form-group">
            <div class="input-group">
                <!--ko ifnot:$parent.model()._isReadOnlyMode -->
                <span class="btn input-group-addon" data-bind="click:function(){ $parent.model().removeSimpleRoutineFromToDo($index)}">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </span>
                <!-- /ko -->
                <label class="form-control exercise-title" data-bind="text: model.title"></label>
            </div>
        </div>
        <!-- ko foreach:_exerciseMeasures-->
        <div class="form-group" data-bind="ifnot: $parents[1].model()._isReadOnlyMode, validationElement: _exerciseMeasureType.measureValue">
            <div class="input-group">
                <input type="number" min="0" class="form-control measure-value-input" data-bind="value: _exerciseMeasureType.measureValue, valueUpdate: 'afterkeydown', attr: { placeholder: _exerciseMeasureType.measureDesciption, readonly: $parents[1].model()._isReadOnlyMode}">
                <div class="input-group-addon" data-bind="text:'('+ _exerciseMeasureType.shortMeasureDescription() + ')'"></div>
            </div>
        </div>
        <div class="form-group" data-bind="if: $parents[1].model()._isReadOnlyMode && _exerciseMeasureType.measureValue">
            <div class="input-group">
                <input type="number" min="0" class="form-control measure-value-input" data-bind="value: _exerciseMeasureType.measureValue" readonly="readonly">
                <div class="input-group-addon" data-bind="text:'('+ _exerciseMeasureType.shortMeasureDescription() + ')'"></div>
            </div>
        </div>
        <!-- /ko -->
    </div>
</div>


