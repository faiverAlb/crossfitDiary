
@{
    ViewBag.Title = "Manage Workout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="manage-workout-page" data-bind="visible:true" style="display: none">

    <!--ko if:errorMessager.hasMessage -->
    <div class="alert alert-danger" role="alert">
        <span data-bind="text: errorMessager.message"></span>
    </div>    
    <!-- /ko -->

    <div data-bind="visible: isDataLoading">
        @Html.Partial(MVC.Shared.Views._Spinner)
    </div>

    <div class="new-or-existing container" id="NewOrExistingAccordion">
        <div class="choose-buttons text-center pt-2" style="display: none" data-bind="visible:true">
            <button type="button" class="btn btn-warning btn" data-bind="click:function(){manageWorkoutClick(true);}">Create new workout?</button>
            or
            <button type="button" class="btn btn-success btn" data-bind="click:function(){manageWorkoutClick(false);}">Log existing workout?</button>
        </div>

        <div data-bind="if:_isCreateNewWorkout">
            <div class="new-workout-container" id="NewWorkoutContainer">
                <div data-bind="template: { name: 'create-new-workout-template', data: _createWorkoutController }"></div>
                <div class="want-to-log-container my-2" data-bind="if: _canSeeLoggingContainer">
                    <div class="log-workout-container" data-bind="with:_logWorkoutController">
                        @{ Html.RenderPartial(MVC.Crossfitter.Views.Templates._LogWorkoutPartial); }
                    </div>
                </div>
            </div>
        </div>
        <div data-bind="ifnot:_isCreateNewWorkout">
            <div class="existing-workouts-container" id="ExistingWorkoutsContainer">
                <div data-bind="template: { name: 'existing-workouts-template', data: _chooseExistingWorkoutController }"></div>
                <div class="want-to-log-container" data-bind="if: _canSeeLoggingContainer">
                    <div class="log-workout-container " data-bind="with:_logWorkoutController">
                        @{ Html.RenderPartial(MVC.Crossfitter.Views.Templates._LogWorkoutPartial); }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@{ Html.RenderPartial(MVC.Crossfitter.Views.Templates._CreateNewWorkout); }
@{ Html.RenderPartial(MVC.Crossfitter.Views.Templates._ExistingWorkoutsTemplate); }
@{ Html.RenderPartial(MVC.Crossfitter.Views.Templates._RoutineInfoTemplate); }

@section styles{
    @Styles.Render("~/Content/manage-workout")
}

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/crossfitter/manageWorkout")
    <script>
        $(function() {
            var path = "@Url.Content("~")";
            let model = new Pages.ManageWorkoutController(new General.BasicParameters(path));
            ko.applyBindings(model);
        });
    </script>
}